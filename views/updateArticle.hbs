<div class="row">
    <div class="col-md-12">
        <h2>{{article.articleTitle}} - Article: {{article.articleId}}</h2>
        <hr />
        <form method="post" action="/article/update">
            <input id="articleId" name="articleId" type="hidden" value="{{article.articleId}}" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="articleTitle">Article Title</label>
                        <input class="form-control" id="articleTitle" name="articleTitle" type="text" value="{{article.articleTitle}}" />
                    </div>
                    <div class="form-group">
                        <label for="articleContent">Article Content</label>
                        <textarea class="form-control" rows="18" id="articleContent" name="articleContent" type="text">{{{article.articleContent}}}</textarea>
                    </div>
                </div>
            </div>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Article" /><br /><br /><br />
        </form>
    </div>
</div>