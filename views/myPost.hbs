<div class="row">
    <div class="col-md-12">
        <h1>Level {{session.user.level}}</h1>
        <div class="progress">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{session.user.exp}}" aria-valuemin="0" aria-valuemax="99" style="width: {{session.user.exp}}%">
                <span class="sr-only">{{session.user.exp}}% Complete</span>
                <span class="exp-label">{{session.user.exp}} %</span>
            </div>
        </div>

        <h2>Daily Record</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        {{!-- <th class="text-center">No</th> --}}
                        <th class="text-center">Topic</th>
                        <th class="text-center">Writer</th>
                        <th class="text-center">Date</th>
                    </tr>
                </thead>
                {{#if session.user}}
                <tbody>
                    {{#each viewData.records}}
                    <tr>
                        <td class="text-center"><a href="/record/reading/{{recordId}}">{{recordTitle}}</td>
                        <td class="text-center"><span class="badge badge-success">{{userName}}</span></td>
                        <td class="text-center"><span class="badge badge-warning">{{createdAt}}</span></td>   
                    </tr>
                    {{/each}}
                </tbody>
                {{/if}}
            </table>
        </div>
    </div>
    {{#unless records}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
    <hr />
    <div class="col-md-12 text-center">
        <p><strong>Total:</strong> {{viewData.records.length}}</p>
    </div>

        <h2>IELTS Speaking</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        {{!-- <th class="text-center">No</th> --}}
                        <th class="text-center">Topic</th>
                        <th class="text-center">Writer</th>
                        <th class="text-center">Date</th>
                    </tr>
                </thead>
                {{#if session.user}}
                <tbody>
                    {{#each viewData.ieltsSpeakings}}
                    <tr>
                        <td class="text-center"><a href="/ieltsSpeaking/reading/{{ieltsSpeakingId}}">{{ieltsSpeakingTitle}}</td>
                        <td class="text-center"><span class="badge badge-success">{{userName}}</span></td>
                        <td class="text-center"><span class="badge badge-warning">{{createdAt}}</span></td>   
                    </tr>
                    {{/each}}
                </tbody>
                {{/if}}
            </table>
        </div>
    </div>
    {{#unless ieltsSpeakings}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
    <hr />
    <div class="col-md-12 text-center">
        <p><strong>Total:</strong> {{viewData.ieltsSpeakings.length}}</p>
    </div>
</div>