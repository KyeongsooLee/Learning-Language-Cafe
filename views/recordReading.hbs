<div class="row">
    <div class="col-md-12">
        <h2>{{viewData.record.recordTitle}}
            <a class="btn btn-success pull-right" href="/record/{{viewData.record.recordId}}">Update</a>
        </h2>
        <hr />
        <p>{{{viewData.record.recordContent}}}</p>
        <hr />
        
        <div class="text-center">
            <a href="/dailyrecord" class="btn btn-primary">Go Back</a>
            {{#if session.user}}
                <a class="btn btn-danger pull-right" href="/record/delete/{{viewData.record.recordId}}" onclick="return confirmDelete('{{viewData.record.recordId}}')">Remove</a>
            {{/if}}
        </div>
    </div>
</div>

<script>
    function confirmDelete(recordId) {
        return confirm("Are you sure you want to remove this record?");
    }
</script>