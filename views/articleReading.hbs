<div class="row">
    <div class="col-md-12">
        <h2>{{viewData.article.articleTitle}}
            <a class="btn btn-success pull-right" href="/article/{{viewData.article.articleId}}">Update</a>
        </h2>
        <hr />
        <p>{{{viewData.article.articleContent}}}</p>
        <hr />
        
        <div class="text-center">
            <a href="/articles" class="btn btn-primary">Go Back</a>
            {{#if session.user}}
                <form action="/article/action/{{viewData.article.articleId}}" method="POST" style="display:inline;">
                    {{#if viewData.article.selected}}
                        <input type="hidden" name="action" value="markAsRead">
                        <button type="submit" class="btn btn-info-inverse">Mark as Read</button>
                    {{else}}
                        <input type="hidden" name="action" value="markAsRead">
                        <button type="submit" class="btn btn-info">Mark as Read</button>
                    {{/if}}
                </form>
                <form action="/article/action/{{viewData.article.articleId}}" method="POST" style="display:inline;">
                    {{#if viewData.article.liked}}
                        <input type="hidden" name="action" value="like">
                        <button type="submit" class="btn btn-warning-inverse">Like</button>
                    {{else}}
                        <input type="hidden" name="action" value="like">
                        <button type="submit" class="btn btn-warning">Like</button>
                    {{/if}}
                </form>
                {{!-- <a class="btn btn-danger pull-right" href="/articles/delete/{{viewData.article.articleId}}">Remove</a> --}}
                <a class="btn btn-danger pull-right" href="/articles/delete/{{viewData.article.articleId}}" onclick="return confirmDelete('{{viewData.article.articleId}}')">Remove</a>
            {{/if}}
        </div>
    </div>
</div>

<script>
    function confirmDelete(articleId) {
        return confirm("Are you sure you want to remove this article?");
    }
</script>