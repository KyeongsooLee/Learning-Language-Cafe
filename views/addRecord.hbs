<div class="row">
    <div class="col-md-12">
        <h2>Add Record</h2>
        <hr>
        <form method="post" action="/records/add">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="recordTitle">Title</label>
                        <input class="form-control" id="recordTitle" name="recordTitle" type="text" />
                        <label for="recordContent">Daily Content</label>
                        <textarea class="form-control" rows="18" id="recordContent" name="recordContent"></textarea>
                    </div>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <a href="/dailyrecord" class="btn btn-primary">Go Back</a>
                <input type="submit" class="btn btn-primary" value="Add Record" /><br /><br /><br />
            </div>
        </form>
    </div>
</div>