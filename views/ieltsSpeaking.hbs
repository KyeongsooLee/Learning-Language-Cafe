<div class="row">
    <div class="col-md-12">
        <h1>Level {{viewData.level}}</h1>
        <div class="progress">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{viewData.exp}}" aria-valuemin="0" aria-valuemax="99" style="width: {{viewData.exp}}%">
                <span class="sr-only">{{viewData.exp}}% Complete</span>
                <span class="exp-label">{{viewData.exp}} %</span>
            </div>
        </div>
        {{#if viewData.msg}}
        <div class="alert alert-danger"> 
            <strong>Error:</strong> {{viewData.msg}}
        </div>
        {{/if}}
        <h2>IELTS Speaking</h2>
        <h2>Board
            <a href="/ieltsSpeaking/add" class="btn btn-success pull-right">Add New Speaking Topic</a>
        </h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        {{!-- <th class="text-center">No</th> --}}
                        <th class="text-center">Topic</th>
                        <th class="text-center">Writer</th>
                        <th class="text-center">Date</th>
                    </tr>
                </thead>
                {{#if session.user}}
                <tbody>
                    {{#each viewData.ieltsSpeakings}}
                    <tr>
                        {{!-- <td class="text-center">{{articleId}}</td> --}}
                        <td class="text-center"><a href="/ieltsSpeaking/reading/{{ieltsSpeakingId}}">{{ieltsSpeakingTitle}}</td>
                        <td class="text-center"><span class="badge badge-success">{{userName}}</span></td>
                        <td class="text-center"><span class="badge badge-warning">{{createdAt}}</span></td>
                    </tr>
                    {{/each}}
                </tbody>
                {{else}}
                <tbody>
                    {{#each viewData.ieltsSpeakings}}
                    <tr>
                        {{!-- <td class="text-center">{{articleId}}</td> --}}
                        <td class="text-center"><a href="/ieltsSpeaking/reading/{{ieltsSpeakingId}}">{{ieltsSpeakingTitle}}</td>
                        <td class="text-center"><span class="badge badge-success">{{userName}}</span></td>
                        <td class="text-center"><span class="badge badge-warning">{{createdAt}}</span></td>
                    </tr>
                    {{/each}}
                </tbody> 
                {{/if}}
            </table>
        </div>
    </div>
    {{#unless ieltsSpeakings}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
    <hr />
    <div class="col-md-12 text-center">
        <p><strong>Total:</strong> {{viewData.ieltsSpeakings.length}}</p>
    </div>
</div>