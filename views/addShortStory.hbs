<div class="row">
    <div class="col-md-12">
        <h2>Add Short Story</h2>
        <hr>
        <form method="post" action="/shortstory/add">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="shortStoryTitle">Short Story Title</label>
                        <input class="form-control" id="shortStoryTitle" name="shortStoryTitle" type="text" />
                        <label for="shortStoryContent">Short Story Content</label>
                        <textarea class="form-control" rows="18" id="shortStoryContent" name="shortStoryContent"></textarea>
                    </div>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="Add Short Story" /><br /><br /><br />
            </div>
        </form>
    </div>
</div>